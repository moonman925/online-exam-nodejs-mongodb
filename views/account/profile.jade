    script(src='https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js', integrity='sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa', crossorigin='anonymous')
    link(rel='stylesheet', href='http://www.bootcss.com/p/buttons/css/buttons.css')
  .page-header
    h3 用户信息
  script.
      $(document).ready(function(){
          $('#refresh').click(function () {
              $('#lgrade').val(localStorage.getItem('#{user.email}'+'low'));
              $('#mgrade').val(localStorage.getItem('#{user.email}'+'mid'));
              $('#hgrade').val(localStorage.getItem('#{user.email}'+'high'));

          })
      })

  form.form-horizontal(action='/account/profile', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    h4 用户：ww@ww.com
    .form-group
      label.col-sm-3.control-label(for='lgrade') 低级
      .col-sm-7
        input.form-control(type='text', name='lgrade', id='lgrade', value='30', disabled)
    .form-group
      label.col-sm-3.control-label(for='mgrade') 中级
      .col-sm-7
        input.form-control(type='text', name='mgrade', id='mgrade', value='0', disabled)
    .form-group
      label.col-sm-3.control-label(for='hgrade') 高级
      .col-sm-7
        input.form-control(type='text', name='hgrade', id='hgrade', value='40', disabled)
    .form-group
      label.col-sm-3.control-label(for='refresh')
      .col-sm-7
        input.button.button-rounded.button-small(type='button', name='refresh',id='refresh',value='删除')
    h4 用户：qq@qq.com
      .form-group
        label.col-sm-3.control-label(for='lgrade') 低级
        .col-sm-7
          input.form-control(type='text', name='lgrade', id='lgrade1', value='30', disabled)
